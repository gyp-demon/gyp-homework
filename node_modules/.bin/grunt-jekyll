#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../._grunt-jekyll@0.4.6@grunt-jekyll/bin/grunt-jekyll" "$@"
  ret=$?
else 
  node  "$basedir/../._grunt-jekyll@0.4.6@grunt-jekyll/bin/grunt-jekyll" "$@"
  ret=$?
fi
exit $ret
