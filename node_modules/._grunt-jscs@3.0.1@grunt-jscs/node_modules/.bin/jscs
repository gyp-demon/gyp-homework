#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../._jscs@3.0.7@jscs/bin/jscs" "$@"
  ret=$?
else 
  node  "$basedir/../../../._jscs@3.0.7@jscs/bin/jscs" "$@"
  ret=$?
fi
exit $ret
